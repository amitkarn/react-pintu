{
  "compilerOptions": {
    "target": "ES2015",
    "jsx": "react",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "strictNullChecks": true
  },
  "include": [
    "./custom_typings/**/*.d.ts",
    "../custom_typings/**/*.d.ts",
    "./typings/index.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "compileOnSave": false
}
